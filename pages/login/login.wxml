<!-- pages/login/login.wxml -->
<view class='iconTop'>
    <image src='../../src/images/128.png' mode='widthFix'></image>
</view>
<view>
    <view class='inputView'>
        账号：
        <input class='inputBox' bindinput="userNameInput" placeholder="{{userName}}"></input>
    </view>
    <view class='inputView'>
        密码：
        <input class='inputBox' bindinput="userPWInput" placeholder="{{userPW}}"></input>
    </view>
    <view>
        <button class="weui-btn" bindtap="login">登录</button>
    </view>
</view>